<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-5 text-gray-800">Dashboard</h1>
    {{!-- cards number of users --}}
    <div class="row">

        <!-- number of users this month -->
        {{> admin/_chart color="primary" desc="Kullanıcı Sayısı (Bu Ay)" id="thisMthNumOfUsers"
        content=thisMthNumOfUsers icon="user-clock" }}

        <!-- total number of users -->
        {{> admin/_chart color="success" desc="Kullanıcı Sayısı (Toplam)" id="totalNumOfUsers" content=totalNumOfUsers
        icon="users" }}

        {{!-- total number of admin --}}
        {{> admin/_chart color="warning" desc="Admin Sayısı" id="totalNumOfAdmins" content=totalNumOfAdmins
        icon="user-tie" }}

        <!-- Number of email verified users -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">E-posta Onaylı Kullanıcı
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div id="emailVerNumOfUsers" style="display: none;">{{emailVerNumOfUsers}}</div>
                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                        {{emailVerPercUsers}}%
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="progress progress-sm mr-2">
                                        <div class="progress-bar bg-info" role="progressbar"
                                            style="width: {{emailVerPercUsers}}%" aria-valuenow="{{emailVerPercUsers}}"
                                            aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {{!-- Pie Charts Row --}}
    <div class="row mt-5">
        <!-- Pie Chart Users -->
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Kullanıcılar</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand">
                                <div class=""></div>
                            </div>
                            <div class="chartjs-size-monitor-shrink">
                                <div class=""></div>
                            </div>
                        </div>
                        <canvas id="usersPieChart" width="742" height="245"
                            style="display: block; width: 742px; height: 245px;"
                            class="chartjs-render-monitor"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Kullanıcı Sayısı (Bu Ay)
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> Kullanıcı Sayısı (Toplam)
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-warning"></i> Admin Sayısı
                        </span>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Pie Chart E-mail --}}
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">E-posta Onayı</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand">
                                <div class=""></div>
                            </div>
                            <div class="chartjs-size-monitor-shrink">
                                <div class=""></div>
                            </div>
                        </div>
                        <canvas id="emailPieChart" width="742" height="245"
                            style="display: block; width: 742px; height: 245px;"
                            class="chartjs-render-monitor"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> E-postası Onaylı Kullanıcı
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> E-postası Onaylanmamış Kullanıcı
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->